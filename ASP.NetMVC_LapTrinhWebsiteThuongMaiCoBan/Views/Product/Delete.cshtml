@model Product

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="addproduct">
        <h3 class="addproduct_title">Xoá Sản Phẩm</h3>
        <form asp-action="Delete">
            <div class="addproduct_container">

                <div class="addprc_c_header">

                    <div class="addprc_c_title">
                        <input type="hidden" asp-for="Id" />
                        <div class="del_prc_desc">
                            <h1>@Model.Name</h1>
                        </div>
                        <div class="del_prc_desc">
                            <h1>@Model.Price.ToString("N0")₫</h1>
                        </div>
                        <div class="addprc_c_input">
                            <img class="del_prc_img" src="@Model.ImgUrl" alt="">
                        </div>
                    </div>
                </div>

                <div class="addprc_c_desc">
                    <div class="prc_d_body_config">
                        <div class="prc_d_b_cfg">
                            <p class="prc_d_b_cfg_title">Thông Số Kỹ Thuật</p>
                            <table class="prc_d_b_cfg_table">
                                <tbody>
                                    <tr>
                                        <td>Danh Mục</td>
                                        <td>@Model.Category.Name</td>
                                    </tr>
                                    <tr>
                                        <td>Màn hình</td>
                                        <td>@Model.Display</td>
                                    </tr>
                                    <tr>
                                        <td>CPU</td>
                                        <td>@Model.CPU</td>
                                    </tr>
                                    <tr>
                                        <td>RAM</td>
                                        <td>@Model.RAM</td>
                                    </tr>
                                    <tr>
                                        <td>Ổ cứng</td>
                                        <td>@Model.HardDisk</td>
                                    </tr>
                                    <tr>
                                        <td>Đồ họa</td>
                                        <td>@Model.GPU</td>
                                    </tr>
                                    <tr>
                                        <td>Hệ điều hành</td>
                                        <td>@Model.OS</td>
                                    </tr>
                                    <tr>
                                        <td>Trọng lượng</td>
                                        <td>@Model.Weight</td>
                                    </tr>
                                    <tr>
                                        <td>Kích thước</td>
                                        <td>@Model.Size</td>
                                    </tr>
                                    <tr>
                                        <td>Xuất xứ</td>
                                        <td>@Model.Origin</td>
                                    </tr>
                                    <tr>
                                        <td>Năm ra mắt</td>
                                        <td>@Model.Debut</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="addprc_c_input">
                        <div class="addprc_c_btn_subbtn">
                            <input type="submit" class="addprc_c_input_subbtn--submit" value="Xoá Sản Phẩm">
                            <a href="@Url.Action("Index", "Product")" class="addprc_c_input_subbtn--back">Huỷ Bỏ</a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>

</div>

