@model Product

@{
    ViewData["Title"] = @Model.Name;
}


<div class="container">
    <div class="product_details">
        <div class="product_details_header">
            <div class="prc_d_image">
                <img src="@Model.ImgUrl" alt="">
            </div>
            <div class="prc_d_desc">
                <div class="prc_d_desc_title">@Model.Name</div>
                <div class="prc_d_desc_price">
                    <p class="prc_d_main_price">@Model.Price.ToString("N0")₫</p>
                    <div class="prc_d_sub_price">
                        <p>Trả góp chỉ từ</p>
                        <span>
                            <strong>2.590.000₫</strong>/tháng
                        </span>
                    </div>
                </div>
                <div class="prc_d_btn">
                    <button class="prc_d_btn-buy-now">
                        <h2>MUA NGAY</h2>
                        <p>Giao Hàng Miễn Phí Hoặc Nhận Tại Shop</p>
                    </button>
                    <div class="prc_d_btn-subbtn">
                        <button class="prc_d_btn-installment">
                            <h2>TRẢ GÓP 0%</h2>
                            <p>Duyệt Nhanh Qua Điện Thoại</p>
                        </button>
                        <button class="prc_d_installment-card">
                            <h2>Trả Góp Qua Thẻ</h2>
                            <p>Visa, MasterCard, ATM, JCB, AMEX</p>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="product_details_body">
            <div class="prc_d_body_desc">
                <div class="prc_d_body_desc_container">

                    @if (Model.Desc != null && Model.Desc.Count > 0)
                    {
                        @foreach (var desc in Model.Desc)
                        {
                            <div class="prc_d_body_desc_content">
                                <div class="prc_d_body_desc_title">@desc.Title</div>
                                <div class="prc_d_body_desc_detail">@desc.Details</div>
                                <div class="prc_d_body_desc_img"><img src="@desc.ImgUrl" alt=""></div>
                            </div>
                        }
                    }

                </div>
            </div>

            <div class="prc_d_body_config">
                <div class="prc_d_b_cfg">
                    <p class="prc_d_b_cfg_title">Thông Số Kỹ Thuật</p>
                    <table class="prc_d_b_cfg_table">
                        <tbody>
                            <tr>
                                <td>Danh Mục</td>
                                <td>@Model.Category.Name</td>
                            </tr>
                            <tr>
                                <td>Màn hình</td>
                                <td>@Model.Display</td>
                            </tr>
                            <tr>
                                <td>CPU</td>
                                <td>@Model.CPU</td>
                            </tr>
                            <tr>
                                <td>RAM</td>
                                <td>@Model.RAM</td>
                            </tr>
                            <tr>
                                <td>Ổ cứng</td>
                                <td>@Model.HardDisk</td>
                            </tr>
                            <tr>
                                <td>Đồ họa</td>
                                <td>@Model.GPU</td>
                            </tr>
                            <tr>
                                <td>Hệ điều hành</td>
                                <td>@Model.OS</td>
                            </tr>
                            <tr>
                                <td>Trọng lượng</td>
                                <td>@Model.Weight</td>
                            </tr>
                            <tr>
                                <td>Kích thước</td>
                                <td>@Model.Size</td>
                            </tr>
                            <tr>
                                <td>Xuất xứ</td>
                                <td>@Model.Origin</td>
                            </tr>
                            <tr>
                                <td>Năm ra mắt</td>
                                <td>@Model.Debut</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

